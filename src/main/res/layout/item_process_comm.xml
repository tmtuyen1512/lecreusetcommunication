<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/llItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/drawable_comm_step"
        android:paddingBottom="16dp"
        android:layout_marginBottom="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="RDIDatabase"
                style="@style/White_Bold_14"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tvPercent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/White_Bold_14"
                tools:text="20%"
                android:gravity="right"
                android:visibility="gone"
                android:layout_weight="2"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="1dp"
            style="@style/Grey_12"
            android:textColor="#f0f0f0"
            android:visibility="gone"
            tools:text = "Receiving file ......"/>
        <ProgressBar
            android:id="@+id/progressBarComm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:visibility="gone"
            style="@style/Progress_Comm"
            android:indeterminate="false"
            android:max="100"
            android:maxHeight="10dip"
            android:minHeight="10dip"
            android:progress="0"
            android:secondaryProgress="100"
            android:progressDrawable="@drawable/progress_limit" />/>
    </LinearLayout>

</LinearLayout>