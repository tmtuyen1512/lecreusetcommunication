<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale_grey">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_checked"
            android:gravity="center"
            android:paddingTop="20dp" />


        <TextView
            style="@style/Header_Montserrat_Normal_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="@string/success"
            android:textAllCaps="true"
            android:textColor="@color/tealish" />

        <TextView
            android:id="@+id/message"
            style="@style/Message_Montserrat_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="20dp"
            tools:text="Unable to save the setting.\nPlease try again, or contact the system \nadministrator" />

    </LinearLayout>

    <Button
        android:id="@+id/btnOK"
        style="@style/Button_Common"
        android:layout_width="@dimen/with_button"
        android:layout_height="@dimen/height_edittext"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/drawable_button_green"
        android:text="@string/ok"
        android:textAllCaps="false" />

</RelativeLayout>
