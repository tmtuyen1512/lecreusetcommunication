<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="White_Bold_14">
        <item name="android:fontFamily">NotoSans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Dark_Grey_16">
        <item name="android:fontFamily">NotoSans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#232f3b</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="Primary_12">
        <item name="android:fontFamily">NotoSans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="Progress_Comm" parent="Widget.AppCompat.ProgressBar.Horizontal"/>

    <style name="Montserrat">
        <item name="android:typeface">sans</item>
    </style>

    <style name="Montserrat_Bold">
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#232f3b</item>
    </style>

    <style name="Keyboard_Alphabet">
        <item name="android:textSize">15sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Keyboard_Numeric">
        <item name="android:textSize">19sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Label_Montserrat_12">
        <item name="android:textSize">12sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">#52677c</item>
    </style>

    <style name="MainTitle_Montserrat">
        <item name="android:textSize">15sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
    </style>

    <style name="MainTitle_Montserrat_Marquee" parent="MainTitle_Montserrat">
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:freezesText">true</item>
    </style>

    <style name="Label_Montserrat_14">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Edittext_Montserrat_14_Bold" parent="Edittext_Montserrat_14">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Edittext_Quantity_Montserrat_Bold_14" parent="Edittext_Quantity_Montserrat_14">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Button_Common" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button_Outline" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>
